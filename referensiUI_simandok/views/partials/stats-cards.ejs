<!-- Stats Cards Component -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <!-- Total Dokumen Card -->
    <div style="background-color: #00341f" class="rounded-xl shadow-xl p-6 text-white transform hover:scale-105 transition">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-gray-100 text-sm mb-1">Total Dokumen</p>
                <h3 class="text-5xl font-bold"><%= documents.length %></h3>
                <p class="text-xs mt-1 text-gray-300">Dokumen diajukan</p>
            </div>
            <svg class="w-12 h-12 text-gray-300 opacity-50" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </div>
    </div>

    <!-- Sedang Direview Card -->
    <div style="background-color: #f0d323" class="rounded-xl shadow-xl p-6 transform hover:scale-105 transition">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-sm mb-1 font-semibold" style="color: #262626">Sedang Direview</p>
                <h3 class="text-5xl font-bold" style="color: #262626"><%= inReviewDocs %></h3>
                <p class="text-xs mt-1" style="color: #262626; opacity: 0.8">Dalam proses</p>
            </div>
            <svg class="w-12 h-12 opacity-40" style="color: #262626" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
        </div>
    </div>

    <!-- Approved Card -->
    <div class="bg-white rounded-xl shadow-xl p-6 border-4 transform hover:scale-105 transition" style="border-color: #00341f">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-sm mb-1 font-semibold text-gray-600">Disetujui</p>
                <h3 class="text-5xl font-bold" style="color: #00341f"><%= approvedDocs %></h3>
                <p class="text-xs mt-1 text-gray-500">Dokumen selesai</p>
            </div>
            <svg class="w-12 h-12 text-green-500 opacity-50" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
        </div>
    </div>
</div>
