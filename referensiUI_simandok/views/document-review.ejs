<div class="w-full mx-auto px-2 sm:px-4 py-4 sm:py-6">
    <div class="max-w-5xl mx-auto">
        <!-- Header -->
        <div class="mb-6 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
            <div>
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">Review Dokumen</h1>
                <p class="text-gray-600 mt-2 text-sm sm:text-base">Tinjau dan berikan keputusan pada dokumen ini</p>
            </div>
            <a href="/" class="px-3 sm:px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition text-sm sm:text-base">
                <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Kembali
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6">
            <!-- Main Content - Document Info & Preview -->
            <div class="lg:col-span-2 space-y-4 sm:space-y-6">
                <!-- Document Information Card -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="px-4 sm:px-6 py-3 sm:py-4" style="background-color: #00341f">
                        <h2 class="text-base sm:text-lg font-semibold text-white">Informasi Dokumen</h2>
                    </div>
                    <div class="p-4 sm:p-6 space-y-3 sm:space-y-4">
                        <div>
                            <label class="text-xs font-medium text-gray-500 uppercase">Judul Dokumen</label>
                            <p class="text-base sm:text-lg font-semibold text-gray-900 mt-1"><%= document.title %></p>
                        </div>
                        <div>
                            <label class="text-xs font-medium text-gray-500 uppercase">Deskripsi</label>
                            <p class="text-sm sm:text-base text-gray-700 mt-1"><%= document.description %></p>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
                            <div>
                                <label class="text-xs font-medium text-gray-500 uppercase">Dibuat Oleh</label>
                                <p class="text-sm sm:text-base text-gray-900 mt-1"><%= document.createdBy %></p>
                            </div>
                            <div>
                                <label class="text-xs font-medium text-gray-500 uppercase">Tanggal Pengajuan</label>
                                <p class="text-gray-900 mt-1"><%= document.createdAt %></p>
                            </div>
                        </div>
                        <div>
                            <label class="text-xs font-medium text-gray-500 uppercase">Link Dokumen</label>
                            <a href="<%= document.documentLink %>" target="_blank" class="text-gray-900 mt-1 flex items-center hover:opacity-70 transition">
                                <svg class="w-5 h-5 mr-2" style="color: #00341f" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                                Buka Dokumen
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Document Link Card -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="px-6 py-4" style="background-color: #00341f">
                        <h2 class="text-lg font-semibold text-white">Akses Dokumen</h2>
                    </div>
                    <div class="p-6">
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
                            <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                            <h3 class="text-lg font-medium text-gray-900 mb-2"><%= document.title %></h3>
                            <p class="text-sm text-gray-500 mb-4">Klik tombol di bawah untuk membuka dokumen di Google Docs/OneDrive</p>
                            <a href="<%= document.documentLink %>" target="_blank" class="inline-block px-6 py-2.5 text-white rounded-lg font-medium transition hover:opacity-90" style="background-color: #00341f">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                                Buka Dokumen
                            </a>
                            <p class="text-xs text-gray-500 mt-4">
                                <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                </svg>
                                Anda dapat memberikan komentar langsung di dokumen
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar - Workflow & Actions -->
            <div class="lg:col-span-1 space-y-6">
                <!-- Workflow Progress Card -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="px-6 py-4" style="background-color: #00341f">
                        <h2 class="text-lg font-semibold text-white">Status Progress</h2>
                    </div>
                    <div class="p-6 space-y-4">
                        <!-- Kasi -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <% if (document.workflow.kasi.status === 'approved') { %>
                                <div style="background-color: #00341f" class="w-10 h-10 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <% } else if (document.workflow.kasi.status === 'reviewing') { %>
                                <div style="background-color: #f0d323" class="w-10 h-10 rounded-full flex items-center justify-center animate-pulse">
                                    <svg class="w-6 h-6" style="color: #262626" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <% } else { %>
                                <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
                                <% } %>
                            </div>
                            <div class="ml-3 flex-1">
                                <p class="text-sm font-semibold text-gray-900"><%= reviewers[0].name %></p>
                                <p class="text-xs text-gray-600"><%= reviewers[0].position %></p>
                                <% if (document.workflow.kasi.status === 'approved') { %>
                                <p class="text-xs mt-1" style="color: #00341f">✓ Disetujui</p>
                                <% if (document.workflow.kasi.date) { %>
                                <p class="text-xs text-gray-500"><%= document.workflow.kasi.date %></p>
                                <% } %> <% if (document.workflow.kasi.notes) { %>
                                <p class="text-xs text-gray-600 mt-1 italic">"<%= document.workflow.kasi.notes %>"</p>
                                <% } %> <% } else if (document.workflow.kasi.status === 'reviewing') { %>
                                <p class="text-xs mt-1" style="color: #f0d323">⏳ Sedang direview</p>
                                <% if (document.workflow.kasi.viewed) { %>
                                <p class="text-xs text-gray-500">Sudah dilihat</p>
                                <% } else { %>
                                <p class="text-xs text-gray-500">Belum dilihat</p>
                                <% } %> <% } else { %>
                                <p class="text-xs mt-1 text-gray-500">Menunggu</p>
                                <% } %>
                            </div>
                        </div>

                        <!-- Kasubdit -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <% if (document.workflow.kasubdit.status === 'approved') { %>
                                <div style="background-color: #00341f" class="w-10 h-10 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <% } else if (document.workflow.kasubdit.status === 'reviewing') { %>
                                <div style="background-color: #f0d323" class="w-10 h-10 rounded-full flex items-center justify-center animate-pulse">
                                    <svg class="w-6 h-6" style="color: #262626" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <% } else { %>
                                <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
                                <% } %>
                            </div>
                            <div class="ml-3 flex-1">
                                <p class="text-sm font-semibold text-gray-900"><%= reviewers[1].name %></p>
                                <p class="text-xs text-gray-600"><%= reviewers[1].position %></p>
                                <% if (document.workflow.kasubdit.status === 'approved') { %>
                                <p class="text-xs mt-1" style="color: #00341f">✓ Disetujui</p>
                                <% if (document.workflow.kasubdit.date) { %>
                                <p class="text-xs text-gray-500"><%= document.workflow.kasubdit.date %></p>
                                <% } %> <% if (document.workflow.kasubdit.notes) { %>
                                <p class="text-xs text-gray-600 mt-1 italic">"<%= document.workflow.kasubdit.notes %>"</p>
                                <% } %> <% } else if (document.workflow.kasubdit.status === 'reviewing') { %>
                                <p class="text-xs mt-1" style="color: #f0d323">⏳ Sedang direview</p>
                                <% if (document.workflow.kasubdit.viewed) { %>
                                <p class="text-xs text-gray-500">Sudah dilihat</p>
                                <% } else { %>
                                <p class="text-xs text-gray-500">Belum dilihat</p>
                                <% } %> <% } else { %>
                                <p class="text-xs mt-1 text-gray-500">Menunggu</p>
                                <% } %>
                            </div>
                        </div>

                        <!-- Direktur -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <% if (document.workflow.direktur.status === 'approved') { %>
                                <div style="background-color: #00341f" class="w-10 h-10 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <% } else if (document.workflow.direktur.status === 'reviewing') { %>
                                <div style="background-color: #f0d323" class="w-10 h-10 rounded-full flex items-center justify-center animate-pulse">
                                    <svg class="w-6 h-6" style="color: #262626" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <% } else { %>
                                <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
                                <% } %>
                            </div>
                            <div class="ml-3 flex-1">
                                <p class="text-sm font-semibold text-gray-900"><%= reviewers[2].name %></p>
                                <p class="text-xs text-gray-600"><%= reviewers[2].position %></p>
                                <% if (document.workflow.direktur.status === 'approved') { %>
                                <p class="text-xs mt-1" style="color: #00341f">✓ Disetujui</p>
                                <% if (document.workflow.direktur.date) { %>
                                <p class="text-xs text-gray-500"><%= document.workflow.direktur.date %></p>
                                <% } %> <% if (document.workflow.direktur.notes) { %>
                                <p class="text-xs text-gray-600 mt-1 italic">"<%= document.workflow.direktur.notes %>"</p>
                                <% } %> <% } else if (document.workflow.direktur.status === 'reviewing') { %>
                                <p class="text-xs mt-1" style="color: #f0d323">⏳ Sedang direview</p>
                                <% if (document.workflow.direktur.viewed) { %>
                                <p class="text-xs text-gray-500">Sudah dilihat</p>
                                <% } else { %>
                                <p class="text-xs text-gray-500">Belum dilihat</p>
                                <% } %> <% } else { %>
                                <p class="text-xs mt-1 text-gray-500">Menunggu</p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <% if (document.currentStatus === 'approved') { %>
                    <div style="background-color: rgba(0, 52, 31, 0.1)" class="border-t px-4 py-3">
                        <p class="text-xs text-center font-medium" style="color: #00341f">✓ Dokumen telah disetujui semua pihak</p>
                    </div>
                    <% } %>
                </div>

                <!-- Action Buttons Card -->
                <% if (document.currentStatus !== 'approved') { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="px-6 py-4" style="background-color: #00341f">
                        <h2 class="text-lg font-semibold text-white">Tindakan</h2>
                    </div>
                    <div class="p-6 space-y-3">
                        <!-- Catatan -->
                        <div>
                            <label for="notes" class="block text-sm font-medium text-gray-700 mb-2"> Catatan <span class="text-xs text-gray-500">(Opsional untuk setujui, wajib untuk revisi)</span> </label>
                            <textarea
                                id="notes"
                                name="notes"
                                rows="3"
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:border-transparent resize-none text-sm"
                                style="focus:ring-color: #00341F"
                                placeholder="Tambahkan catatan atau instruksi revisi..."></textarea>
                        </div>

                        <!-- Action Buttons -->
                        <div class="space-y-2">
                            <button onclick="handleApprove(<%= document.id %>)" class="w-full px-4 py-2.5 text-white rounded-lg font-medium transition hover:opacity-90" style="background-color: #00341f">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Setujui Dokumen
                            </button>
                            <button onclick="handleRevision(<%= document.id %>)" class="w-full px-4 py-2.5 bg-orange-500 text-white rounded-lg font-medium transition hover:bg-orange-600">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Minta Revisi
                            </button>
                        </div>

                        <div class="pt-3 border-t border-gray-200">
                            <p class="text-xs text-gray-500 text-center">
                                <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                </svg>
                                Setujui: Dokumen lanjut ke tahap berikutnya • Minta Revisi: Staff akan merevisi sesuai catatan
                            </p>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    async function handleApprove(documentId) {
        const notes = document.getElementById('notes').value;

        if (!confirm('Apakah Anda yakin ingin menyetujui dokumen ini?')) {
            return;
        }

        try {
            const response = await fetch(`/api/documents/${documentId}/approve`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ notes }),
            });

            const result = await response.json();

            if (result.success) {
                alert('Dokumen berhasil disetujui!');
                window.location.href = '/';
            } else {
                alert('Gagal menyetujui dokumen: ' + (result.message || 'Terjadi kesalahan'));
            }
        } catch (error) {
            alert('Terjadi kesalahan: ' + error.message);
        }
    }

    async function handleRevision(documentId) {
        const notes = document.getElementById('notes').value;

        if (!notes.trim()) {
            alert('Harap tambahkan instruksi revisi untuk staff');
            return;
        }

        if (!confirm('Dokumen akan dikembalikan ke staff untuk revisi. Lanjutkan?')) {
            return;
        }

        try {
            const response = await fetch(`/api/documents/${documentId}/reject`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ notes }),
            });

            const result = await response.json();

            if (result.success) {
                alert('Instruksi revisi berhasil dikirim ke staff');
                window.location.href = '/';
            } else {
                alert('Gagal mengirim instruksi revisi: ' + (result.message || 'Terjadi kesalahan'));
            }
        } catch (error) {
            alert('Terjadi kesalahan: ' + error.message);
        }
    }
</script>
